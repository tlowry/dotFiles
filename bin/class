#!/bin/sh
# create a c++ .h & .cpp class given a class name
GLOBALS=""
function glob() {
 GLOBALS=$GLOBALS" -D $1=$2"
}

[ -z "$1" ] && echo "No class name supplied" && exit 1

glob FILE_NAME "$1"
glob USER_NAME "tony.lowry"
glob COMPANY_NAME "github.com/tlowry"
glob VERSION_NO 2.2

echo "GLOBALS $GLOBALS"

cog_loc="$DOT_LOC/bin/lib/cogapp-2.5.1/scripts/cog.py"
python2 $cog_loc -o $1.h -d $GLOBALS $DOT_LOC/bin/cog_header_template.py
python2 $cog_loc -o $1.cpp -d $GLOBALS $DOT_LOC/bin/cog_class_template.py
