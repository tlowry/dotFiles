set shell sh

# exit on err + unset vars (safer shell exec)
set shellopts '-eu'

map <enter> shell

cmd open $xdg-open "$f"

cmd delete ${{
    clear
    tput cup $(($(tput lines)/3)); tput bold
    set -f
    printf "%s\n\t" "$fx"
    printf "delete?[y/n]"
    read ans
    [ $ans = "y" ] && rm -rf "$fx"
}}

map x delete
