# DM agnostic keybindings

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
    nohup reload_conf

# lock the screen 
ctrl + alt + Delete
    lock_screen

# take a screen clipping from area
ctrl + p
    exec sc_clip

# screen clip ocr 
ctrl + w
    exec sc_text

# audio
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5% 

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86AudioPrev
    cmus-remote -r

XF86AudioNext
    cmus-remote -n

XF86AudioPlay
    cmus-remote -u

XF86Tools
    $TERMINAL -e cmus

# change kbd language input
super + x
    togglekbd

super + space
    $BROWSER

super + n
    $TERMINAL -e newsboat

super + a
    calibre

super + w
    $TERMINAL -e lf

super + e
    $TERMINAL -e vim -c 'startinsert'
