# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# swap the current node and the biggest node
super + g
	bspc node -s biggest
#
# state/flags
#

# set the window state
super + {t,s}
	bspc node -t {tiled,pseudo_tiled}

super + f
    bspc node -t ~fullscreen

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# Directional swap + focus 
super + shift + {h,j,k,l}
    d={west,south,north,east}; bspc node -s $d.local --follow || bspc node -m $d --follow

# Directional swap + focus
super + shift + {Left,Down,Up,Right}
    d={west,south,north,east}; bspc node -s $d.local --follow || bspc node -m $d --follow

# Focus next/previous window
alt + {_,shift} + Tab
    bspc node --focus {prev,next}

# Focus in direction vi
super + {h,j,k,l}
    d={west,south,north,east}; bspc node -f $d.local

# Focus in direction arrows 
super + {Left,Down,Up,Right}
    d={west,south,north,east}; bspc node -f $d.local

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

#
# move/resize
#

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# expand a window by moving one of its side outward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
#super + {Left,Down,Up,Right}
#	bspc node -z {-20 0,0 20,0 -20,20 0}

# DM agnostic keybindings

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
    nohup reload_conf

# lock the screen 
ctrl + alt + Delete
    lock_screen

# take a screen clipping from area
ctrl + p
    exec sc_clip

# screen clip ocr 
ctrl + w
    exec sc_text

# audio
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5% 

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86AudioPrev
    cmus-remote -r

XF86AudioNext
    cmus-remote -n

XF86AudioPlay
    cmus-remote -u

XF86Tools
    $TERMINAL -e cmus

# change kbd language input
super + x
    togglekbd

# monocle layout
super + z
	bspc desktop -l next

super + space
    $BROWSER

super + e
    $TERMINAL -e lf
