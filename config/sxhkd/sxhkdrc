# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#
# state/flags
#

# set the window state
super + {t,s}
	bspc node -t {tiled,pseudo_tiled}

super + f
    bspc node -t ~fullscreen

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# Focus a node without swapping
super + shift + {h,j,k,l}
    d={west,south,north,east}; bspc node -s $d.local --follow || bspc node -m $d --follow

# Focus a node without swapping
super + shift + {Left,Down,Up,Right}
    d={west,south,north,east}; bspc node -s $d.local --follow || bspc node -m $d --follow

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -z {-20 0,0 20,0 -20,20 0}


# DM agnostic keybindings
# if another app maps these first it will handle them
# instead

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
    nohup reload_conf

# lock the screen 
ctrl + alt + Delete
    i3lock

ctrl + p
    exec screen_shot

# Focus next/previous window
alt + {_,shift} + Tab
    bspc node --focus {prev,next}

# volume
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5% 

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86AudioPrev
    cmus-remote -r

XF86AudioNext
    cmus-remote -n

XF86AudioPlay
    cmus-remote -u

XF86Tools
    cmus

super + space
    $BROWSER
